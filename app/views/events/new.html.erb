<section class="content-block-nopad" style="color: black; height: 500px;">
  <div class="container footer-1-3">
  <div class="row">
    <div class="large-4 columns">
      <br><br><br>

  <%= form_for @event do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :date %>
    <%= f.date_field :date %>
    <%= f.label :price %>
    <%= f.number_field :price %>
    <%= f.label :location %>
    <%= f.text_field :location %>
    <%= f.submit "Add Event" %>
  <% end %>
  </div>
  </div>
</div>
</section>
