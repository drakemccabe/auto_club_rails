<div class="container">
  <div class="row" style="height: 500px; padding: 100px;">

<h2> Edit Home Page Content </h2>
<p> Use the full http link for photo field </p>

<%= form_for @box do |f| %>
  <%= f.label :subtext %>
    <%= f.text_field :subtext %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :photo %>
    <%= f.text_field :photo %>
    <br>
    <%= f.label :video_url %>
    <%= f.text_field :video_url %>
    <%= f.label :footer_image %>
    <%= f.text_field :footer_image %>
  <%= f.submit "Update Homepage Content" %>

<% end %>

</div>
</div>
