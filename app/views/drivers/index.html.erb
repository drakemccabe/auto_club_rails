<section class="content-block">
<h2> <%= event.name %> </h2>
<p> Date: <%= event.date %> </p>
<p> Location: <%= event.location %> </p>

<a href="/events/<%= event.id %>/drivers.csv">Download CSV</a>

<table class="table">
<tr>
  <td> # </td>
  <td> Name </td>
  <td> Car </td>
  <td> Email </td>
  <td> Location </td>
</tr>

<% drivers.each_with_index do |driver, index| %>
  <tr>
    <td> <%= index + 1 %> </td>
    <td> <%= driver.name %> </td>
    <td> <%= driver.car %> </td>
    <td> <%= driver.email %> </td>
    <td> <%= driver.note %> </td>
  </tr>
<% end %>
</table>
</section>
