           <li class="nav-item"><a href="#"><strong>| Admin Tools:</strong></a></li>
           <li class="nav-item"><%= link_to 'New Event', new_event_path %></li>
          <li class="nav-item"><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
        <%- end -%>
                </ul>
                <!--//nav-->
            </div>
            <!--// End Navigation -->
        </div>
        <!--// End Container -->
    </nav>
    <!--// End Navbar -->
</header>


  <%- flash.each do |key, value| -%>
    <div class="flash flash-<%= key %>">
      <%= value %>
    </div>
  <%- end -%>

  <%= yield %>


