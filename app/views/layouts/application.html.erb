  <% @alerts.each do |alert| %>
    <% if alert.exp_date > Date.today %>
    <div class="alert alert-danger" role="alert" style="margin: 0px;">
      <h3 style="text-align: center"><strong>Attention: <%= alert.body %></strong></h3>
      <p class="text-center"><strong><em>- Club Loose North Staff</em></strong></p>
    </div>
    <% end %>
  <% end %>

  <%- flash.each do |key, value| -%>
    <div class="flash flash-<%= key %>">
      <%= value %>
    </div>
  <%- end -%>

  <%= yield %>


  <section class="content-block-nopad bg-deepocean footer-wrap-1-3">
