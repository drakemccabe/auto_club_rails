                    <!-- /.social -->
                </div>
                <div class="col-md-3 pull-right">
                  
                    <ul class="social social-light">
                        <li>
                            <a href="https://www.facebook.com/groups/clubloosenorth/"><i class="fa fa-2x fa-facebook"></i> JOIN THE FACEBOOK GROUP!</a>
                        </li>
                    </ul>
                    <p class="address-bold-line"><i class="fa fa-heart pomegranate"></i> Club Loose North</p>
