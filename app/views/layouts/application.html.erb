                <a href="/">
                    <img src="http://www.clubloose-north.com/cln-header1.png" class="brand-img img-responsive">
                </a>
            </div>
            <!-- Navigation -->
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="active nav-item">
                        <a href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a href="/events">Drive</a>
                    </li>
                    <li class="nav-item">
                        <a href="/events">Watch</a>
                    </li>
